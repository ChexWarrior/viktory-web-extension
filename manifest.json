{
  "manifest_version": 2,
  "name": "Viktory 2 Scraper",
  "version": "1.0",
  "description": "Scrapes information from GamesByEmail Viktory 2 games",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "permissions": [
    "*://gamesbyemail.com/*"
  ],
  "background": {
    "scripts": ["/src/js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://gamesbyemail.com/*logPopup*"],
      "js": ["/src/js/content/checkForLog.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon.svg",
      "38": "icon.svg"
    },
    "default_title": "Viktory Scraper",
    "default_popup": "/src/popup.html"
  }
}