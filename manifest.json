{
  "manifest_version": 2,
  "name": "Viktory 2 Scraper",
  "version": "1.0",
  "description": "Scrapes information from GamesByEmail Viktory 2 game to create a story and various stats.",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "permissions": [
    "*://gamesbyemail.com/*"
  ],
  "background": {
    "scripts": ["/scripts/background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://gamesbyemail.com/*logPopup*"],
      "js": ["/scripts/content/checkForLog.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon.svg",
      "38": "icon.svg"
    },
    "default_title": "Viktory Scraper",
    "default_popup": "/html/popup/popup.html"
  }
}